            }
            System.out.println();
        }  
    }
    //Exercise#7
    public static void numberline(){
        for (int i=1;i<=5;i++){
            for (int j=1;j<=5-i;j++){
            System.out.print(" ");
            }
            System.out.print(i);
            System.out.println();
        }
    } 
    //Exercise#8
    public static void numbers8(){
        for (int i=1;i<=5;i++){
            for (int j=1;j<=5-i;j++){
                System.out.print(" ");
            }
            for (int k=1;k<=i;k++){
                System.out.print(i);
            }
            System.out.println();
        }
    }
    //Exercise#9
    public static void numbers9(){
        for (int i=1;i<=40;i++){
            System.out.print("-");
        }
        System.out.println();
        for (int i=1;i<=10;i++){
            System.out.print("_-^-");
        }
        System.out.println();
        for (int i=1;i<=2;i++){
            for (int j=1;j<=9;j++){
                System.out.print(j);
                System.out.print(j);
            }
            for (int j=0;j<=0;j++){
                System.out.print(j);
                System.out.print(j);
            }
        }
        System.out.println();
        for (int i=1;i<=40;i++){
            System.out.print("-");
        }
    }
    //Exercise#10
    public static void numbers10(){
        for (int i=1;i<=6;i++){
            for (int j=1;j<=9;j++){
                System.out.print(" ");
            }
            for (int j=1;j<=1;j++){
                System.out.print("|");
            }
        }
        System.out.println();
        for (int i=1;i<=6;i++){
            for (int j=1;j<=9;j++){
                System.out.print(j);
            }
            for (int j=0;j<=0;j++){
                System.out.print(j);
            }
        }
        System.out.println();
    }
    //Exercise#11
    public static void numbers11(){
        for (int i=1;i<=10;i++){
            for (int j=1;j<=4;j++){
                System.out.print(" ");
            }
            for (int j=1;j<=1;j++){
                System.out.print("|");
            }
        }
        System.out.println();
        for (int i=1;i<=10;i++){
            for (int j=1;j<=4;j++){
                System.out.print(j);
            }
            for (int j=0;j<=0;j++){
                System.out.print(j);
            }
        }
        System.out.println();
        for (int i=1;i<=7;i++){
            for (int j=1;j<=7;j++){
                System.out.print(" ");
