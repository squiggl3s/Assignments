    //Exercise#13
    public static void numbers13(){
        for (int i=1;i<=5;i++){
            for (int j=9;j>=0;j--){
                for (int k=1;k<=5;k++){
                    System.out.print(j);
                }
            }
            System.out.println();
        }
    }
