    //Exercise#1
    public static void physics(){
        double t = 1;
        double s0 = 2;
        double v0 = 3;
        double a = 4;
        double s = s0+v0*t+0.5*a*(t*t);
        System.out.println(s);
    }
    //Exercise#2
    public static void pattern(){
        for (int i=1;i<=10;i++){
            System.out.print(i*i+" ");
        }
    }
    //Exercise#3
    public static void fibonacci(){
        int a = 0, b=1, c=0;
        System.out.print(b);
        for (int i=2;i<=12;i++){
            c=a+b;
            System.out.print(" "+c);
            a=b;
            b=c;
        }
        System.out.println();
    }
    //Exercise#4
    public static void stars(){
        for (int i=1;i<=5;i++){
            for (int j=1;j<=5; j++){
                System.out.print("*");
            }
            System.out.println();
        }
    }
    //Exercise#5
    public static void stars2(){
