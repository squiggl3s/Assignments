    //Exercise#15
    public static void numbers15(){
        for (int i=1;i<=5;i++){
            for(int j=1;j<=6-i;j++){
                System.out.print("-");
            }
            for (int k=1;k<=2*i-1;k++){
                System.out.print(2*i-1);
            }
            for (int j=1;j<=6-i;j++){
                System.out.print("-");
            }
            System.out.println();
        }  
    }
    //Exercise#16
    public static void SlashFigure(){
        for (int i=1;i<=6;i++){
            for (int j=1;j<=2*i-2;j++){
                System.out.print("\\");
            }
            for (int k=1;k<=26-4*i;k++){
                System.out.print("!");
            }
            for (int j=1;j<=2*i-2;j++){
                System.out.print("/");
            }
            System.out.println();
        }
    }
    //Exercise#17
    public static void SlashFigure4(){
        int height = 4;
        int marks = 4*height+2;
        for (int i=1;i<=height;i++){
            for (int j=1;j<=2*i-2;j++){
                System.out.print("\\");
            }
            for (int k=1;k<=marks-4*i;k++){
                System.out.print("!");
            }
            for (int j=1;j<=2*i-2;j++){
                System.out.print("/");
            }
            System.out.println();
        }
    }
    public static void SlashFigure8(){
        int height = 8;
        int marks = 4*height+2;
        for (int i=1;i<=height;i++){
            for (int j=1;j<=2*i-2;j++){
                System.out.print("\\");
            }
            for (int k=1;k<=marks-4*i;k++){
                System.out.print("!");
            }
            for (int j=1;j<=2*i-2;j++){
                System.out.print("/");
            }
            System.out.println();
        }
    }
    //Exercise#18
    /*create method call window{
     * for 2 times {
     *     write line 
     *     for 3 times{
     *         for 3 times{
     *              write "| " on the output line
     *         }
     *     skip a line
     *     }
     * }
     * write line
     }
     create method call line{
         for two times{
             write "+"
             for three times{
                 write "="
             }
         }
         write "+"
     }
     */
    //Exercise#19
    public static void window(){
        for (int i=1;i<=2;i++){
            line();
            for (int j=1;j<=3;j++){
                for (int k=1;k<=3;k++){
                    System.out.print("|   ");
                }
                System.out.println();
            }
        }
        line();
    }
    public static void line(){
        for (int i=1;i<=2;i++){
            System.out.print("+");
            for (int j=1;j<=3;j++){
                System.out.print("=");
            }
        }
        System.out.println("+");
    }
    //Exercise#20
    public static void StarFigure(){
        for (int i=1;i<=5;i++){
            for (int j=1;j<=20-4*i;j++){
                System.out.print("/");
            }
            for (int j=1;j<=8*i-8;j++){
                System.out.print("*");
            }
            for (int j=1;j<=20-4*i;j++){
                System.out.print("\\");
            }
            System.out.println();
        }
    }
    //Exercise#21
    //the value of height is the global constant 
    public static void StarFigure3(){
        int height = 3;
        int dash = 4*height;
        for (int i=1;i<=height;i++){
            for (int j=1;j<=dash-4*i;j++){
                System.out.print("/");
            }
            for (int j=1;j<=8*i-8;j++){
                System.out.print("*");
            }
            for (int j=1;j<=dash-4*i;j++){
                System.out.print("\\");
            }
            System.out.println();
        }
    }
    public static void StarFigure6(){
        int height = 6;
        int dash = 4*height;
        for (int i=1;i<=height;i++){
            for (int j=1;j<=dash-4*i;j++){
                System.out.print("/");
            }
            for (int j=1;j<=8*i-8;j++){
                System.out.print("*");
            }
            for (int j=1;j<=dash-4*i;j++){
                System.out.print("\\");
            }
            System.out.println();
        }
    }
    //Exercise#22
    public static void DollarFigure(){
        for (int i=1;i<=7;i++){
            for (int j=1;j<=2*i-2;j++){
                System.out.print("*");
            }
            for (int j=1;j<=8-i;j++){
                System.out.print("$");
            }
            for (int j=1;j<=16-2*i;j++){
                System.out.print("*");
            }
            for (int j=1;j<=8-i;j++){
                System.out.print("$");
            }
            for (int j=1;j<=2*i-2;j++){
                System.out.print("*");
            }
            System.out.println();
        }
    }
    //Exercise#23
    public static void DollarFigure2(){
        //the height value is the global constant for the figure's height
        int height=7;
        //the one right above this note, yes this height one
        int dollarsigns = height+1;
        int star=height*2+2;
        for (int i=1;i<=height;i++){
            for (int j=1;j<=2*i-2;j++){
                System.out.print("*");
            }
            for (int j=1;j<=dollarsigns-i;j++){
                System.out.print("$");
            }
            for (int j=1;j<=star-2*i;j++){
                System.out.print("*");
            }
            for (int j=1;j<=dollarsigns-i;j++){
                System.out.print("$");
            }
            for (int j=1;j<=2*i-2;j++){
                System.out.print("*");
            }
            System.out.println();
        }
    }
    public static void propro1(){
        for (int i=1;i<=7;i++){
            for (int j=1;j<=7-i;j++){
                System.out.print("*");
            }
            for (int j=1;j<=i;j++){
                System.out.print(" ");
            }
            for (int j=1;j<=14-2*i;j++){
                System.out.print("/");
            }
            for (int j=1;j<=2*i-2;j++){
                System.out.print("\\");
            }
            for (int j=1;j<=i;j++){
                System.out.print(" ");
            }
            for (int j=1;j<=7-i;j++){
                System.out.print("*");
            }
            System.out.println();
        }
    }
    public static void propro2(){
        propro2line();
        for (int i=1;i<=2;i++){
            for (int j=1;j<=3;j++){
                System.out.print("|");
                for (int k=1;k<=3-j;k++){
                    System.out.print(" ");
                }
                System.out.print("^");
                for (int k=1;k<=2*j-2;k++){
                    System.out.print(" ");
                }
                System.out.print("^");
                for (int k=1;k<=3-j;k++){
                    System.out.print(" ");
                }
                System.out.print("|");
                System.out.println();
            }
        }
        propro2line();
        for (int i=1;i<=2;i++){
            for (int j=1;j<=3;j++){
                System.out.print("|");
                for (int k=1;k<=j-1;k++){
                    System.out.print(" ");
                }
                System.out.print("V");
                for (int k=1;k<=6-j*2;k++){
                    System.out.print(" ");
                }
                System.out.print("V");
                for (int k=1;k<=j-1;k++){
                    System.out.print(" ");
                }
                System.out.print("|");
                System.out.println();
            }
        }
        propro2line();
    }
    public static void propro2line(){
        System.out.print("+");
        for (int i=1;i<=6;i++){
            System.out.print("-");
        }
        System.out.print("+");
        System.out.println();
    }
}


