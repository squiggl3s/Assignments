    }
    //Exercise #9
    public static void eggtop(){
        System.out.println("  _______");
        System.out.println(" /       \\");
        System.out.println("/         \\");
    }
    public static void eggbottom(){
        System.out.println("\\         /");
        System.out.println(" \\       /");
        System.out.println("  _______");
    }
    public static void crack(){
        System.out.println("-\"-'-\"-'-\"-");
    }
    //Exercise #11\
    public static void TwoRockets(){
        uparrows();
        square();
        UnitedStates();
        square();
        uparrows();
    }
    public static void uparrows(){
        System.out.println("   /\\       /\\");
        System.out.println("  /  \\     /  \\");
        System.out.println(" /    \\   /    \\");
    }
    public static void square(){
        System.out.println("+------+ +------+");
        System.out.println("|      | |      |");
        System.out.println("|      | |      |");
        System.out.println("+------+ +------+");
    }
    public static void UnitedStates(){
        System.out.println("|United| |United|");
        System.out.println("|States| |States|");
    }
    //Exercise #12
    public static void GoTeam(){
