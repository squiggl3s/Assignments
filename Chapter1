    }
    public static void FightSong(){
        GoTeam();
        System.out.println("You're the best,\nIn the West.");
        GoTeam();
    }
    //Exercise #13
    public static void StarFigures(){
        stripes();
        stars();
        System.out.println();
        stripes();
        stars();
        stripes();
        System.out.println();
        starline();
        stripes();
        stars();
    }
    public static void stripes(){
        System.out.println("*****");
        System.out.println("*****");
    }
    public static void stars(){
        System.out.println(" * *");
        System.out.println("  * ");
        System.out.println(" * *");
    }
    public static void starline(){
        System.out.println("  *");
        System.out.println("  *");
        System.out.println("  *");
    }
    //Exercise #14
    public static void Lanterns(){
        lanterntop();
        System.out.println();
        lanterntop();
        light();
        System.out.println("*************");
        lanterntop();
        System.out.println();
        lanterntop();
        lanternline();
        light();
        light();
        lanternline();
        lanternline();
    }
    public static void lanterntop(){
        System.out.println("    *****");
        System.out.println("  *********");
        System.out.println("*************");
    }
    public static void light(){
        System.out.println("* | | | | | *");
    }
    public static void lanternline(){
        System.out.println("    *****");
    }
    //Exercise #15
    public static void EggStop() {
        eggtop();
        eggbottom();
        eggbottom();
        System.out.println(" +-------+");
        System.out.println();
        eggtop();
        System.out.println("|   STOP  |");
        eggbottom();
        System.out.println();
        eggtop();
        System.out.println("+---------+");
    }
