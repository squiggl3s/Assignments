    //Exercise #6
    public static void HelloWorld() {
        System.out.println("public class hello {");
        System.out.println("  public static void main(Strings[] args) {");
        System.out.println("    System.out.println(\"Hello, World!\")");
        System.out.println("  }");
        System.out.println("}");
    }
    //Exercise #7
      public static void Mantra(){
        System.out.println("There's one thing every coder must understand:\nThe System.out.println command.");
        System.out.println();
    }
    //Exercise #8
    public static void dash() {
        System.out.println("//////////////////////");
    }
    public static void dash2() {
        System.out.print("\\\\\\\\\\\\\\\\\\\\\\");
        System.out.print("\\\\\\\\\\\\\\\\\\\\\\");
        System.out.println("");
    }
    public static void Stewie2(){
        System.out.println("|| Victory is mine! ||");
